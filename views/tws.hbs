<h1 class="title"></h1>


<div class="jumbotron">
  <div class="container">
    <form>
      <div class="form-group">
        <label for="addTw">Type here to Tweet</label>
        <textarea class="form-control" id="addTw" rows="3"></textarea>
      </div>
      <p class="lead">
        <a class="btn btn-primary btn-lg" href="#" role="button">Tweet</a>
      </p>
    </form>
  </div>
</div>


<div class="feed">
  <div class="list-group">
    {{#each tws}}
    <div class="card">

      <div class="progress">
        <div class="progress-bar" style="width:100%">
        </div>
      </div>
      <div>



        <div class="card-body">
          <img src="https://upload.wikimedia.org/wikipedia/fr/c/c8/Twitter_Bird.svg" alt="Tweet" width="30" height="30">

          <p class="card-text">{{{this.message}}}</p>
          <footer class="blockquote-footer">
            <small class="text-muted">
              {{{ formatDate this.createdAt }}}
            </small>
          </footer>
        </div>
      </div>
      {{/each}}
    </div>